<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AbstractUniButton">
        <!-- Text Color -->
        <attr name="android:textColor" />
        <attr name="textColorPressed" format="color" />
        <attr name="textColorDisabled" format="color" />

        <!-- Background Color -->
        <attr name="android:background" />
        <attr name="backgroundPressed" format="color|reference" />
        <attr name="backgroundDisabled" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="UniButton">
        <!-- Background Color -->
        <attr name="android:background" />
        <attr name="backgroundPressed" />
        <attr name="backgroundDisabled" />

        <!-- Radius -->
        <attr name="radius" format="dimension" />
        <attr name="topLeftRadius" format="dimension" />
        <attr name="topRightRadius" format="dimension" />
        <attr name="bottomRightRadius" format="dimension" />
        <attr name="bottomLeftRadius" format="dimension" />

        <!-- Shape -->
        <attr name="shape" format="enum">
            <enum name="rectangle" value="0" />
            <enum name="semicircular" value="1" />
        </attr>
    </declare-styleable>
</resources>